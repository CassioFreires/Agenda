<%- include('includes/head')%>
    <%- include('includes/nav')%>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 mt-5">
                    <h1 class="display-1 text-center">
                        Login
                    </h1>
                    <p class="text-center lead">Faça login ou crie sua conta</p>
                    <%- include('includes/messages')%>

                    <!-- TELA DE CADASTRO -->
                    <div class="row">
                        <div class="col border p-5">
                            <h4>Faça seu cadastro</h4>
                            <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>
                                <form class="form-cadastro" action="/login/register" method="POST">
                                    <div class="mb-3">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <label for="exampleInputEmail1" class="form-label">Seu e-mail</label>
                                        <input type="email" class="form-control" name="email">
                                    </div>
                                    <div class="mb-3 content-form-1">
                                        <label for="exampleInputEmail1" class="form-label">Senha</label>
                                        <input type="password" class="form-control" name="password">
                                    </div>
                                    <button type="submit" class="btn btn-primary teste">Criar minha conta</button>
                                </form>
                        </div>
                        <!-- TELA DE LOGIN -->
                        <div class="col border p-5">
                            <h4>Faça seu login</h4>
                            <p>Se você já tem conta, faça seu login:</p>
                            <form class="form-login" action="/login/login" method="POST">
                                <div class="mb-3">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <label for="exampleInputEmail1" class="form-label">Seu e-mail</label>
                                    <input type="email" class="form-control" name="email">
                                </div>
                                <div class="mb-3 content-form-2">
                                    <label for="exampleInputEmail1" class="form-label">Senha</label>
                                    <input type="password" class="form-control" name="password">
                                </div>
                                <button type="submit" class="btn btn-success">Login</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <%- include('includes/footer')%>